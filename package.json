{
  "name": "ai-resolver",
  "displayName": "Gemini Resolver",
  "description": "Git merge conflict resolver using Gemini AI.",
  "version": "0.1.0",
  "icon": "resources/ai-resolver.ico",
  "license": "MIT",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Education"
  ],
  "keywords": [
    "gemini",
    "ai",
    "assistant",
    "coding",
    "google",
    "llm",
    "git",
    "code merge",
    "git conflict",
    "conflict resolution"
  ], 
  "activationEvents": [],
  "main": "./dist/bundle.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-resolver.resolveCurrentConflict",
        "title": "Resolve Current Conflict with AI"
      }
    ],
    "configuration": {
      "title": "Gemini Resolver",
      "properties": {
        "geminiResolver.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google API Key for Gemini",
          "scope": "application",
          "secret": true
        },
        "geminiResolver.model": {
          "type": "string",
          "default": "gemini-2.0-flash",
          "enum": [
            "gemini-2.0-flash",
            "gemini-2.0-flash-lite",
            "gemma-3-27b-it",
            "gemini-pro"
          ],          
          "description": "Gemini model to use for resolving conflicts"
        }
      }
    }    
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qinkeith/gemini-resolver.git"
  },
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package-vsix": "vsce package",
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.21.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "diff3": "^0.0.4"
  }
}
